<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="歌曲名称："
        android:textSize="18sp"
        android:id="@+id/main_item_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView android:text="歌手："
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:id="@+id/main_item_tv_Singer"/>
            <TextView android:text="专辑："
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:id="@+id/main_item_tv_album"/>
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:text="时长："
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:id="@+id/main_item_tv_duration"/>
            <TextView
                android:text="大小："
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:id="@+id/main_item_tv_size"/>

        </TableRow>

    </TableLayout>

</LinearLayout>